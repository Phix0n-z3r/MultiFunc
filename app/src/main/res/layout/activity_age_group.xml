<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"> <!-- تصویر پس‌زمینه دلخواه -->

    <EditText
        android:id="@+id/etAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_background"
        android:hint="سن را وارد کنید"
        android:inputType="number"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnCheckGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_send_style"
        android:padding="12dp"
        android:text="بررسی گروه سنی"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:padding="16dp"
        android:paddingTop="24dp"
        android:text="نتیجه اینجا نمایش داده می‌شود"
        android:textColor="#222"
        android:textSize="18sp" />

</LinearLayout>
